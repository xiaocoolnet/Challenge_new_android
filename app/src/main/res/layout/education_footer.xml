<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.example.chy.challenge.button.WaveView
        android:id="@+id/add_education"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_50"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_tianjia"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加教育经历"
            android:textColor="@color/green"
            android:layout_marginLeft="@dimen/activity_layout_10"
            />
        </LinearLayout>
    </com.example.chy.challenge.button.WaveView>
</LinearLayout>
