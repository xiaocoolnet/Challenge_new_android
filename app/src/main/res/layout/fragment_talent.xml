<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="wrap_content">
        <TextView
            style="@style/title_text"
            android:text="@string/talent_title"/>
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/intalent_retrieva"
            android:layout_width="@dimen/activity_layout_45"
            android:layout_height="@dimen/activity_layout_45"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="@dimen/activity_layout_25"
                android:layout_height="@dimen/activity_layout_25"
                android:background="@mipmap/ic_shaixuan"
                android:layout_centerInParent="true"
                />
        </com.example.chy.challenge.button.WaveView>
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/talent_location_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_layout_45"
            >
            <TextView
                android:id="@+id/talent_now_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="烟台"
                android:textSize="@dimen/activity_text_16"
                android:layout_marginLeft="@dimen/activity_layout_10"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_xialajiatou"
                android:layout_marginLeft="@dimen/activity_layout_5"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/talent_now_location"
                />
        </com.example.chy.challenge.button.WaveView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/intalent_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>