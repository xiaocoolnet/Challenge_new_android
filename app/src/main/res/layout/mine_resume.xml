                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="求职意向"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        android:textColor="@color/green"
                        android:textSize="@dimen/activity_text_16"
                        />
                    <TextView
                        android:id="@+id/resume_wantjobtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离职-即可上岗"
                        android:layout_marginLeft="@dimen/activity_layout_30"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/activity_text_14"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white_5"
                android:layout_marginTop="@dimen/activity_layout_10"
                android:layout_marginLeft="@dimen/activity_layout_10"
                android:layout_marginRight="@dimen/activity_layout_10"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_layout_50"
                    android:gravity="center_vertical"
                    android:text="教育经历"
                    android:textSize="@dimen/activity_text_16"
                    android:textColor="@color/green"
                    android:paddingLeft="@dimen/activity_layout_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_layout_1"
                    android:layerType="software"
                    android:background="@drawable/border_gray_dottedline"
                    />
                <com.example.chy.challenge.Utils.NoScrollListView
                    android:id="@+id/resume_education_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white_5"
                android:layout_marginTop="@dimen/activity_layout_10"
                android:layout_marginLeft="@dimen/activity_layout_10"
                android:layout_marginRight="@dimen/activity_layout_10"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_layout_50"
                    android:gravity="center_vertical"
                    android:text="工作经历"
                    android:textSize="@dimen/activity_text_16"
                    android:textColor="@color/green"
                    android:paddingLeft="@dimen/activity_layout_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_layout_1"
                    android:layerType="software"
                    android:background="@drawable/border_gray_dottedline"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_layout_15"
                    >
                    <TextView
                        android:id="@+id/resume_jobcompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京互联网网络公司"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_text_14"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                    <TextView
                        android:id="@+id/resume_company_jobtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2013.6-2016.6"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/activity_text_14"
                        android:layout_marginRight="@dimen/activity_layout_10"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_layout_10"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作职位"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_text_14"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                    <TextView
                        android:id="@+id/resume_company_jobposition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品经理"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/activity_text_14"
                        android:layout_marginLeft="@dimen/activity_layout_30"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_layout_10"
                    android:layout_marginBottom="@dimen/activity_layout_15"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业技能"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_text_14"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                    <TextView
                        android:id="@+id/resume_skillone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品经理"
                        android:textColor="@color/green"
                        android:visibility="gone"
                        android:textSize="@dimen/activity_text_14"
                        android:paddingTop="@dimen/activity_layout_3"
                        android:paddingBottom="@dimen/activity_layout_3"
                        android:paddingLeft="@dimen/activity_layout_5"
                        android:paddingRight="@dimen/activity_layout_5"
                        android:background="@drawable/border_white_green"
                        android:layout_marginLeft="@dimen/activity_layout_30"
                        />
                    <TextView
                        android:id="@+id/resume_skilltwo"
