                            android:textColor="@color/green"
                            android:textSize="@dimen/activity_text_16"
                            android:layout_weight="1.0"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activity_layout_0"
                            android:layout_weight="1.0"
                            android:layout_marginLeft="@dimen/activity_layout_10"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.0"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_dingwei"
                                    android:layout_marginRight="@dimen/activity_layout_5"
                                    />

                                <TextView
                                    android:id="@+id/adapter_location_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/activity_text_14"
                                    android:textColor="@color/gray4"
                                    android:text="北京" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.0"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_gongzuonianxian"
                                    android:layout_marginRight="@dimen/activity_layout_5"
                                    />

                                <TextView
                                    android:id="@+id/adapter_jobtime_worklife"
                                    android:layout_width="match_parent"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/activity_text_14"
                                    android:textColor="@color/gray4"
                                    android:layout_height="match_parent"
                                    android:text="1-3年" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_xueli"
                                    />

                                <TextView
                                    android:id="@+id/adapter_personal_degree"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/activity_layout_5"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/activity_text_14"
                                    android:textColor="@color/gray4"
                                    android:text="本科" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.0"
                                android:gravity="center_vertical|right">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_quanzhi"
                                    />

                                <TextView
                                    android:id="@+id/adapter_work_property"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/activity_layout_5"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/activity_text_14"
                                    android:textColor="@color/gray4"
                                    android:text="全职" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/activity_layout_70"
                        android:layout_height="@dimen/activity_layout_80"
                        android:layout_alignParentRight="true"
                        >
                        <com.example.chy.challenge.button.RoundImageView
                            android:id="@+id/headimage"
                            android:layout_width="@dimen/activity_layout_50"
                            android:layout_height="@dimen/activity_layout_50"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/activity_layout_10"
                            android:layout_marginTop="@dimen/activity_layout_15"
                            />
                        <ImageView
                            android:id="@+id/image_sex"
                            android:layout_width="@dimen/activity_layout_20"
                            android:layout_height="@dimen/activity_layout_20"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/activity_layout_10"
                            android:layout_marginBottom="@dimen/activity_layout_10"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_layout_1"
                    android:layerType="software"
                    android:background="@drawable/border_gray_dottedline"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_layout_15"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="求职意向"
                            android:layout_marginLeft="@dimen/activity_layout_10"
                            android:textColor="@color/green"
                            android:textSize="@dimen/activity_text_16"
                            />
                        <TextView
                            android:id="@+id/resume_wantjobtyindus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品经理"
                            android:layout_marginLeft="@dimen/activity_layout_30"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/activity_text_14"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/green"
                            android:textSize="@dimen/activity_text_16"
                            />
                        <TextView
                            android:id="@+id/resume_wantjobsalary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3K-5K"
                            android:textColor="@color/gray3"
                            android:layout_marginRight="@dimen/activity_layout_10"
                            android:layout_marginLeft="@dimen/activity_layout_5"
                            android:textSize="@dimen/activity_text_14"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_layout_10"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="求职意向"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        android:textColor="@color/green"
                        android:textSize="@dimen/activity_text_16"
                        />
                    <TextView
                        android:id="@+id/resume_wantjobtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="互联网"
                        android:layout_marginLeft="@dimen/activity_layout_30"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/activity_text_14"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_layout_10"
                    android:orientation="horizontal"
