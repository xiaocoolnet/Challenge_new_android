<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/title_back"/>
        <TextView
            style="@style/title_text"
            android:text="修改密码"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:gravity="center_vertical"
                android:text="新密码"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_text_16"
                android:paddingLeft="@dimen/activity_layout_15"
                android:paddingRight="@dimen/activity_layout_30"
                android:layout_height="match_parent"
                />

            <EditText
                android:id="@+id/new_et_pass"
                android:maxLines="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请设置登录密码"
                android:textSize="@dimen/activity_text_14"
                android:layout_marginRight="@dimen/activity_layout_10"
                android:textColorHint="@color/gray4"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_0.5"
            android:background="@color/gray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:gravity="center_vertical"
                android:text="确认密码"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/activity_layout_15"
                android:paddingLeft="@dimen/activity_layout_15"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_text_16"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/new_et_newpass"
                android:background="@null"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="再次输入密码"
                android:textSize="@dimen/activity_text_14"
                android:textColorHint="@color/gray4"/>
        </LinearLayout>

    </LinearLayout>

    <com.example.chy.challenge.button.WaveView
        android:id="@+id/new_submit_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45"
        >
    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button_border"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_text_16"
        android:gravity="center"
        android:text="修改密码"/>
    </com.example.chy.challenge.button.WaveView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>
</LinearLayout>