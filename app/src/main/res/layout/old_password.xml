<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray5"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45"
        >
        <include layout="@layout/title_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_text_18"
            android:textColor="@color/white"
            android:text="验证密码"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_layout_30"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_suo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_layout_10"
            />
        <EditText
            android:id="@+id/oldpass_et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/activity_layout_10"
            android:hint="请输入原密码"
            android:textSize="@dimen/activity_text_14"
            android:textColorHint="@color/gray4"
            />
    </LinearLayout>
    <com.example.chy.challenge.button.WaveView
        android:id="@+id/oldpass_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45"
        android:layout_marginTop="@dimen/activity_layout_70"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_45"
            android:text="下一步"
            android:background="@drawable/border_green_white"
            android:layout_marginLeft="@dimen/activity_layout_10"
            android:layout_marginRight="@dimen/activity_layout_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/activity_text_16"
            />
        </com.example.chy.challenge.button.WaveView>
</LinearLayout>
