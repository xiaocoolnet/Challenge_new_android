<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <include layout="@layout/title_back"/>
        <TextView
            style="@style/title_text"
            android:text="手机绑定"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前手机号:"
        android:textSize="@dimen/activity_text_14"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/biuding_tv_Phone"
        android:textSize="@dimen/activity_text_16"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="159****2525"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/activity_layout_10"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/border_white_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45">
        <TextView
            android:layout_width="@dimen/activity_layout_45"
            android:layout_height="match_parent"
            android:text="+86"
            android:gravity="center"
            >
        </TextView>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:maxLines="1"
            android:id="@+id/binding_et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入手机号"
            android:textSize="@dimen/activity_text_14"
            android:textColorHint="@color/gray4"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/border_white_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45">
        <ImageView
            android:layout_width="@dimen/activity_layout_45"
            android:layout_height="@dimen/activity_layout_45" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/binding_et_code"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="验证码"
                android:textSize="@dimen/activity_text_14"
                android:textColorHint="@color/gray4"
                android:background="@null"/>
            <com.example.chy.challenge.button.WaveView
                android:id="@+id/getCode"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_getCode"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="获取验证码"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingLeft="@dimen/activity_layout_10"
                android:paddingRight="@dimen/activity_layout_10"
                android:background="@drawable/button_border3"
                android:textColor="@color/green"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            </com.example.chy.challenge.button.WaveView>
        </RelativeLayout>
    </LinearLayout>
    <com.example.chy.challenge.button.WaveView
        android:id="@+id/binding_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_layout_50"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45"
        android:background="@drawable/button_border"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="确认更换"
        android:textSize="@dimen/activity_text_16"
        android:textColor="@color/white"/>
    </com.example.chy.challenge.button.WaveView>
    <TextView
        android:layout_marginTop="@dimen/activity_layout_10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改手机号后，可以使用新的手机号登录"
        android:textSize="@dimen/activity_text_14"
        android:textColor="@color/gray4"/>
</LinearLayout>