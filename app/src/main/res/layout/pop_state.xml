<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_35"
        android:text="工作状态"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="@dimen/activity_text_16"
        />
    <com.example.chy.challenge.button.RevealButton
        android:id="@+id/popcamera_photograph"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="离职-随时到岗"
        android:textColor="@color/gray4"
        android:background="@null"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2"
        />
    <com.example.chy.challenge.button.RevealButton
        android:id="@+id/popcamera_photo_album"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="在职-考虑机会"
        android:textColor="@color/gray4"
        android:background="@null"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2"
        />
    <com.example.chy.challenge.button.RevealButton
        android:id="@+id/popstate_chance"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="在职-月内到岗"
        android:textColor="@color/gray4"
        android:background="@null"
        />
</LinearLayout>
