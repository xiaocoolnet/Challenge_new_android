<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.example.chy.challenge.button.WaveView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_50"
        android:id="@+id/ril_item_education"
        >
        <TextView
            android:id="@+id/tv_item_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:layout_marginLeft="@dimen/activity_layout_10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/activity_text_16"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_layout_10"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20160802"
                android:textColor="@color/gray4"
                android:textSize="@dimen/activity_text_14"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_jiantoulv"
                android:layout_marginLeft="@dimen/activity_layout_5"
                />
        </LinearLayout>
    </com.example.chy.challenge.button.WaveView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_0.5"
        android:background="@color/gray2"
        android:layout_marginLeft="@dimen/activity_layout_10"
        android:layout_marginRight="@dimen/activity_layout_10"
        />
</LinearLayout>
