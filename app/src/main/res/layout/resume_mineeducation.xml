<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="79dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_layout_15"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="就读学校"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_14"
                    android:layout_marginLeft="@dimen/activity_layout_10"
                    />
                <TextView
                    android:id="@+id/resume_adapter_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鲁东大学"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/activity_text_14"
                    android:layout_marginLeft="@dimen/activity_layout_30"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/resume_adapter_readtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20160102"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/activity_text_14"
                    android:layout_marginRight="@dimen/activity_layout_10"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_layout_15"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所学专业"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_14"
                    android:layout_marginLeft="@dimen/activity_layout_10"
                    />
                <TextView
                    android:id="@+id/resume_adapter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算机"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/activity_text_14"
                    android:layout_marginLeft="@dimen/activity_layout_30"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/resume_adapter_dgee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大专"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/activity_text_14"
                    android:layout_marginRight="@dimen/activity_layout_10"
                    />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_1"
            android:layout_gravity="bottom"
            android:background="@drawable/border_gray_dottedline"
            android:layout_marginTop="@dimen/activity_layout_15"
            />
    </LinearLayout>
</LinearLayout>
