<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray5"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <include layout="@layout/title_back_compelete"/>
        <TextView
            style="@style/title_text"
            android:text="工作/实习经历"/>
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/submit_job_experice"
            android:layout_width="45dp"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/activity_layout_45">
            <ImageView
                android:src="@mipmap/ic_duigou"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </com.example.chy.challenge.button.WaveView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="最近一次工作/实习经历"
            android:layout_marginLeft="@dimen/activity_layout_10"
            android:textColor="@color/gray4"
            android:id="@+id/textView5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_224"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <com.example.chy.challenge.button.WaveView
                android:id="@+id/work_commany_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_45"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_layout_15"
                    android:textSize="@dimen/activity_text_16"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_layout_15"
                    >
                    <TextView
                        android:id="@+id/work_tv_commany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请输入公司名称"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/activity_text_14"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_jiantoulv"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                </LinearLayout>
            </com.example.chy.challenge.button.WaveView>

            <View
                style="@style/segmentation"/>
            <com.example.chy.challenge.button.WaveView
                android:id="@+id/work_commany_industry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_45"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司行业"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_layout_15"
                    android:textSize="@dimen/activity_text_16"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/activity_layout_15"
                    >
                    <TextView
                        android:id="@+id/work_tv_commany_industry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择行业"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/activity_text_14"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_jiantoulv"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                </LinearLayout>
            </com.example.chy.challenge.button.WaveView>

            <View
                style="@style/segmentation"/>

            <com.example.chy.challenge.button.WaveView
                android:id="@+id/work_Position_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_45"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位类型"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_layout_15"
                    android:textSize="@dimen/activity_text_16"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/activity_layout_15"
                    >
                    <TextView
                        android:id="@+id/work_tv_Position_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择职位类型"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/activity_text_14"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_jiantoulv"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                </LinearLayout>
            </com.example.chy.challenge.button.WaveView>

            <View
                style="@style/segmentation"/>

            <com.example.chy.challenge.button.WaveView
                android:id="@+id/work_skills_show"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_45"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技能展示"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_layout_15"
                    android:textSize="@dimen/activity_text_16"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/activity_layout_15"
                    >
                    <TextView
                        android:id="@+id/work_tv_skills_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择技能"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/activity_text_14"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_jiantoulv"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                </LinearLayout>
            </com.example.chy.challenge.button.WaveView>

            <View
                style="@style/segmentation"/>

            <com.example.chy.challenge.button.WaveView
                android:id="@+id/work_work_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_45"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任职时间段"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_layout_15"
                    android:textSize="@dimen/activity_text_16"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/activity_layout_15"
                    >
                    <TextView
                        android:id="@+id/work_tv_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择任职时间段"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/activity_text_14"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_jiantoulv"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_layout_10"
                        />
                </LinearLayout>
            </com.example.chy.challenge.button.WaveView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_layout_10"
            android:text="工作/实习内容"
            android:textColor="@color/gray4"/>
        <EditText
            android:id="@+id/work_et_describe"
            android:maxLength="300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:padding="@dimen/activity_layout_5"
            android:gravity="top"
            android:background="@color/white"/>

        <TextView
            style="@style/segmentation"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/activity_layout_15"
            android:background="@color/white">
            <TextView
                android:id="@+id/work_look_other_personal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="看看别人怎么写"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/activity_layout_15"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtnum"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/txtnum_big"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/300"
                    android:textColor="@color/green"/>
            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
        </ScrollView>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_1"
        android:layout_alignParentBottom="true"
        android:id="@+id/textview"
        />
</RelativeLayout>