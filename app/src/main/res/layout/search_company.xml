<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45">
        <include layout="@layout/title"/>
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/talent_location_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_layout_45"
            >
            <TextView
                android:id="@+id/talent_now_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="烟台"
                android:textSize="@dimen/activity_text_16"
                android:layout_marginLeft="@dimen/activity_layout_10"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_xialajiatou"
                android:layout_marginLeft="@dimen/activity_layout_5"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/talent_now_location"
                />
        </com.example.chy.challenge.button.WaveView>
            <com.example.chy.challenge.button.WaveView
                android:id="@+id/search_cancel"
                android:layout_width="@dimen/activity_layout_45"
                android:layout_height="@dimen/activity_layout_45"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_text_16"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_layout_10"
                    />
            </com.example.chy.challenge.button.WaveView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_tv_green4_25"
            android:layout_toRightOf="@id/talent_location_city"
            android:layout_toLeftOf="@id/search_cancel"
            android:layout_margin="@dimen/activity_layout_7"
            android:paddingLeft="@dimen/activity_layout_5"
            android:paddingRight="@dimen/activity_layout_10"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="@dimen/activity_layout_20"
                android:layout_height="@dimen/activity_layout_20"
                android:background="@mipmap/search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_layout_5"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="职位/公司/技能/姓名"
                android:textSize="@dimen/activity_text_14"
                android:background="@null"
                android:layout_marginLeft="@dimen/activity_layout_30"
                android:layout_centerVertical="true"
                android:textColorHint="@color/green3"
                android:id="@+id/search_editText" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
