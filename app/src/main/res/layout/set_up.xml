<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray5"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_45"
        >
        <include layout="@layout/title_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_18"
            android:gravity="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_138"
        android:layout_marginTop="@dimen/activity_layout_10"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/binding_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_45"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机绑定"
                android:layout_marginLeft="@dimen/activity_layout_10"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_layout_10"
                android:background="@mipmap/ic_jiantoulv"
                />
        </com.example.chy.challenge.button.WaveView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_0.5"
            android:background="@color/gray2"
            android:layout_marginLeft="@dimen/activity_layout_10"
            android:layout_marginRight="@dimen/activity_layout_10"
            />
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/binding_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_45"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:layout_marginLeft="@dimen/activity_layout_10"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_layout_10"
                android:background="@mipmap/ic_jiantoulv"
                />
        </com.example.chy.challenge.button.WaveView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_0.5"
            android:background="@color/gray2"
            android:layout_marginLeft="@dimen/activity_layout_10"
            android:layout_marginRight="@dimen/activity_layout_10"
            />
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/binding_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_45"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息提醒"
                android:layout_marginLeft="@dimen/activity_layout_10"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_layout_10"
                android:background="@mipmap/ic_jiantoulv"
                />
        </com.example.chy.challenge.button.WaveView>
    </LinearLayout>
    <com.example.chy.challenge.button.WaveView
        android:id="@+id/binding_aboutmine"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_layout_10"
        android:background="@color/white"
        android:layout_height="@dimen/activity_layout_45"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:layout_marginLeft="@dimen/activity_layout_10"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_layout_10"
            android:background="@mipmap/ic_jiantoulv"
            />
    </com.example.chy.challenge.button.WaveView>
    <com.example.chy.challenge.button.WaveView
        android:id="@+id/binding_change_mine"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_layout_10"
        android:background="@color/white"
        android:layout_height="@dimen/activity_layout_45"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换身份"
            android:layout_marginLeft="@dimen/activity_layout_10"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_layout_10"
            android:background="@mipmap/ic_jiantoulv"
            />
    </com.example.chy.challenge.button.WaveView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <com.example.chy.challenge.button.WaveView
            android:id="@+id/getout_APP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_layout_45"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:background="@color/green"
                android:text="退出当前账号"
                android:textSize="@dimen/activity_text_18"
                android:gravity="center"
                />
        </com.example.chy.challenge.button.WaveView>
    </LinearLayout>
</LinearLayout>
